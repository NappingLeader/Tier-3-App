pipeline {
    agent {
        docker {
            image 'docker:24.0.6-dind'  // Docker-in-Docker (DinD)
            args '-u 0 -v /var/run/docker.sock:/var/run/docker.sock --dns=8.8.8.8'  // Ensures Docker CLI works inside the container
        }
    }

    environment {
        // Removed redundant DOCKER_IMAGE (already defined in agent)
        DOCKER_CONFIG = "${env.WORKSPACE}/.docker"
        REGISTRY = 'docker.io/docker754/cartservice'  // Correct Docker Hub path
        DOCKER_CREDENTIALS_ID = 'docker-creds'  // Jenkins credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([  // More reliable than plain 'git'
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/NappingLeader/Tier-3-App.git']]
                ])
            }
        }

        stage('Build & Test Services') {
            parallel {
                stage('cart') {
                    steps {
                        dir('three-tier-architecture-demo/cart') {
                            script {
                                // Build with proper caching
                                sh '''
                                    docker build \
                                        --no-cache \  // Optional: Ensures clean build
                                        -t $REGISTRY:latest \
                                        --label "build_number=${BUILD_NUMBER}" \
                                        .
                                '''
                            }
                        }
                    }
                }
            }
        }

        stage('Push to Registry') {
            steps {
                withCredentials([[
                    $class: 'UsernamePasswordMultiBinding',
                    credentialsId: env.DOCKER_CREDENTIALS_ID,  // Proper variable reference
                    usernameVariable: 'DOCKER_USERNAME',
                    passwordVariable: 'DOCKER_PASSWORD'
                ]]) {
                    script {
                        sh '''
                            echo "$DOCKER_PASSWORD" | docker login \
                                -u "$DOCKER_USERNAME" \
                                --password-stdin
                            docker push $REGISTRY:latest
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            sh 'docker logout'  // Cleanup credentials
        }
        success {
            echo "✅ Success! Image pushed to: ${REGISTRY}:latest"
        }
        failure {
            echo '❌ Pipeline failed - check logs above'
            // Optional: Add Slack/email notification here
        }
    }
}
