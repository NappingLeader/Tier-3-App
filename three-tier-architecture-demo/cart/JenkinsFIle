pipeline {
    agent {
        docker {
            image 'docker:24.0.6-dind' // Or a Docker image that includes Docker CLI
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        DOCKER_CONFIG = "${env.WORKSPACE}/.docker"
        REGISTRY = 'docker754'
        DOCKER_CREDENTIALS_ID = 'docker-creds'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/NappingLeader/Tier-3-App.git', branch: 'main'
            }
        }

        stage('Build & Test Services') {
            parallel {
                stage('cart') {
                    steps {
                        dir('three-tier-architecture-demo/cart') {
                            sh 'docker build -t $REGISTRY/cartservice:latest .'
                        }
                    }
                }
            }
        }

        stage('Push to Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: "$DOCKER_CREDENTIALS_ID", usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh 'echo $PASS | docker login $REGISTRY -u $USER --password-stdin'
                    sh 'docker push $REGISTRY/cartservice:latest'
                }
            }
        }
    }

    post {
        success {
            echo 'Microservices deployed successfully!'
        }
        failure {
            echo 'Deployment failed. Please check the logs.'
        }
    }
}
